{
  "name": "loot-json",
  "version": "0.5.0",
  "description": "Don't just parse. Loot it. The ultimate JSON extractor for unstable LLM outputs.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "json",
    "parser",
    "llm",
    "extractor",
    "ai",
    "openai",
    "gpt",
    "claude",
    "markdown",
    "repair",
    "robust"
  ],
  "author": "rossjang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/rossjang/loot-json.git"
  },
  "homepage": "https://github.com/rossjang/loot-json#readme",
  "bugs": {
    "url": "https://github.com/rossjang/loot-json/issues"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
